<div class="card">

    <div style="display: flex; justify-content: space-between; flex-direction: row;">
        <h5 class="card-header">Danh Sách Users</h5>
        <div style="padding: 20px;">
            <a href="users/create">
                <button type="button" class="btn btn-primary">
                    <span class="tf-icons bx bx-plus-medical"></span>&nbsp; Thêm User
                </button>
            </a>
        </div>

    </div>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Room</th>
                    <th>Loại sự cố</th>
                    <th>Thời gian xử lý</th>
                    <th>User create</th>
                    <th>Mô tả</th>
                    <th>Trạng thái</th>
                    <th>Người xử lý</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                {{#each data.data}}
                <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>{{#sum @index}}
                                {{/sum}}</strong>
                        </td>
                        <td>{{this.room.name}}</td>
                        <td>{{this.type.name}}</td>
                        <td>{{this.type.time_handle}}</td>
                        <td>{{this.user_create.email}}</td>
                        <td>{{this.description}}</td>
                        <td>
                            {{#statusReport this.status}} {{/statusReport}}
                        </td>
                        <td>
                            {{#check this.user_handle.email}} {{/check}}
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                    data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/report/detail?id={{this.id}}"><i class="bx bx-trash me-1"></i>
                                        Chi tiết</a>
                                    <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i>
                                        Đóng</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {{/each}}

            </tbody>
        </table>
        <div style="display: flex; justify-content: center; align-items: center; margin-top: 30px;">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item prev">
                        <a class="page-link" href="javascript:void(0);"><i class="tf-icon bx bx-chevron-left"></i></a>
                    </li>
                    {{#pagination data.totalPage data.currentPage}}

                    <li class="page-item {{#active ../data.currentPage this " active"}} {{/active}}">
                        <a class="page-link" href="report?page={{#sum this}} {{/sum}}">{{#sum this}} {{/sum}}</a>
                    </li>
                    {{/pagination}}

                    <li class="page-item next">
                        <a class="page-link" href="javascript:void(0);"><i class="tf-icon bx bx-chevron-right"></i></a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>